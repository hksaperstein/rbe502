<?xml version="1.0"?>
<robot name="bot">

  <link name="base_link"> <!-- top_center_plate-->
    <visual>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/CenterPlates.stl" scale=".1 .1 .1"/>
      </geometry>
    </visual>
  </link>

  <link name="left_side_wall">
    <visual>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/SideWall.stl" scale=".1 .1 .1"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
  </link>

  <joint name="left_side_wall" type="fixed">
     <parent link="base_link"/>
     <child link="left_side_wall"/>
   </joint>

  <link name="right_side_wall">
    <visual>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/SideWall.stl" scale=".1 .1 .1"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
  </link>

  <joint name="right_side_wall" type="fixed">
     <parent link="base_link"/>
     <child link="right_side_wall"/>
   </joint>


   <link name="left_motor_mount">
     <visual>
       <geometry>
         <mesh filename="package://rbe502_sim/meshes/BalanceRobot/MotorMount.stl" scale=".1 .1 .1"/>
       </geometry>
     </visual>
   </link>

   <joint name="left_motor_mount" type="fixed">
     <parent link="base_link"/>
     <child link="left_motor_mount"/>
   </joint>

   <link name="right_motor_mount">
     <visual>
       <geometry>
         <mesh filename="package://rbe502_sim/meshes/BalanceRobot/MotorMount.stl" scale=".1 .1 .1"/>
       </geometry>
     </visual>
   </link>

   <joint name="right_motor_mount" type="fixed">
     <parent link="base_link"/>
     <child link="right_motor_mount"/>
     <origin xyz="0 0 0" rpy="0 0 0"/>
   </joint>


  <link name="left_wheel">
    <visual>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/Wheel.stl" scale=".1 .1 .1"/>
      </geometry>
    </visual>
  </link>

  <joint name="left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <!-- <axis xyz="0 0 1"/> -->
  </joint>

  <link name="right_wheel">
    <visual>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/Wheel.stl" scale=".1 .1 .1"/>
      </geometry>
    </visual>
  </link>

  <joint name="right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
    <!-- <origin xyz="0 0 .3"/> -->
  </joint>

