  <joint name="base_to_body" type="fixed">
    <parent link="base_link"/>
    <child link="body"/>
    <origin rpy="${pi/2} 0 0"/>
  </joint>


  <link name="left_wheel">
    <visual>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <inertial>
      <mass value="53.337"/>
      <inertia ixx="1.988e7" ixy=" -1657.286" ixz="-6297.698" iyy="4.177e6" iyz="2.292e6" izz="1.645e7"/>
    </inertial>
    <collision>
      <geometry>
       <mesh filename="package://rbe502_sim/meshes/BalanceRobot/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </collision>

  </link>

  <joint name="body_to_left_wheel" type="continuous">
    <parent link="body"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 -1"/>
    <origin xyz="0 0 0.081" rpy="0 0 ${pi/2}"/>
  </joint>

  <link name="right_wheel">
    <visual>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 ${pi} 0" xyz="0 0 0"/>
    </visual>
    <inertial>
      <mass value="53.337"/>
      <inertia ixx="1.988e7" ixy=" -1657.286" ixz="-6297.698" iyy="4.177e6" iyz="2.292e6" izz="1.645e7"/>
    </inertial>
    <collision>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 ${pi} 0" xyz="0 0 0"/>
    </collision>
  </link>

  <joint name="body_to_right_wheel" type="continuous">
    <parent link="body"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 -0.055" rpy="0 0 0"/>
  </joint>

