<?xml version="1.0"?>
<robot name="bot" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find rbe502_sim)/urdf/robot.gazebo.xacro"/>

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <link name="base_footprint"/>

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/RobotBody.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="${pi/2} 0 0"/>
    </visual>
    <inertial>
      <mass value="1.51518"/>
      <inertia ixx="2.286e7" ixy="-2799.989" ixz="-1384.644" iyy="3.069e6" iyz="-1.063e6" izz="2.054e7"/>
      <origin rpy="${pi/2} 0 0"/>

    </inertial>
    <collision>
      <geometry>
       <mesh filename="package://rbe502_sim/meshes/RobotBody.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="${pi/2} 0 0"/>
    </collision>
  </link> -->

  <joint name="footprint_to_base_link" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>


  <link name="left_wheel">
    <visual>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <material name="blue"/>
    </visual>
    <inertial>
      <mass value="0.053337"/>
      <inertia ixx="1.988e7" ixy=" -1657.286" ixz="-6297.698" iyy="4.177e6" iyz="2.292e6" izz="1.645e7"/>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
    </inertial>
    <collision>
      <geometry>
       <mesh filename="package://rbe502_sim/meshes/BalanceRobot/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
    </collision>
  </link>

  <joint name="base_link_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 -0.081 0"/>
  </joint>

  <link name="right_wheel">
    <visual>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi}"/>
    </visual>
    <inertial>
      <mass value="0.053337"/>
      <inertia ixx="1.988e7" ixy=" -1657.286" ixz="-6297.698" iyy="4.177e6" iyz="2.292e6" izz="1.645e7"/>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi}"/>

    </inertial>
    <collision>
      <geometry>
        <mesh filename="package://rbe502_sim/meshes/BalanceRobot/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi}"/>
    </collision>
  </link>

  <joint name="base_link_to_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0.055 0" rpy="0 0 0"/>
  </joint>
  
<link name="imu_link"/>

<joint name="imu_linked" type="fixed">
  <parent link="base_link"/>
  <child link="imu_link"/>
  <origin xyz="0 0 .1475 "/>
</joint>

  
</robot>

